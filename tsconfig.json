{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2021",
        "module": "CommonJS",
        "strict": true,
        "declaration": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "include": ["src", ".scripts", "__tests__"]
}
