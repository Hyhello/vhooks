{
    "env": {
        "node": true,
        "es2021": true
    },
    "globals": {
        "__NAMESPACE__": "readonly"
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": "error",
        "quotes": ["error", "single"],
        "semi": [ "error", "always"]
    }
}
